<%= image_tag(@user.avatar, style: "width: 10%") %><br />
<div>
  <%=@user.username%>
</div>
<%if @user==current_user%>
  <div class="actions">
    <%= link_to 'Edit', edit_user_registration_path, class:"btn btn-outline-primary" %>
  </div>
<% end %>
<% if @posts %>
  <% @posts.each do |post| %>
    <%= render 'posts/post_layout', post:post %>
  <% end %>
<% end %>