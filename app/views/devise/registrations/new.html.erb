<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field mb-2">
      <%= f.label :username %><br />
      <%= f.text_field :username, class: 'form-control', style: 'width: 20%' %>
    </div>
    <div class="field mb-2">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', style: 'width: 20%' %>
    </div>
    <div class="field mb-2">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: 'form-control', style: 'width: 20%' %>
    </div>

    <div class="field mb-2">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', style: 'width: 20%' %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", class: 'btn btn-sm btn-outline-primary' %>
    </div>
<% end %>

<%= render "devise/shared/links" %>