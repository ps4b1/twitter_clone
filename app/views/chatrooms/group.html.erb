<% @users.each do |user| %>
    <div class="user_box">
      <%= user.username %>
      <%= link_to 'Add', chatroom_users_path(user: user.id, chatroom: @chatroom.id ), method: :post, class: "btn btn-outline-primary add_button"%>
      <%= link_to 'View', profile_path(user), class: "btn btn-outline-primary" %>
      <hr>
    </div>
<% end %>
<%= link_to "Start chating", chatroom_path(@chatroom), class: "btn btn-outline-primary" %>

<%= javascript_pack_tag 'add' %>


